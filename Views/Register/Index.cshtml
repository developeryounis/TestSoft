@model Store.Domain.Person
@{
    ViewBag.Title = "Register";
}
<div class="container body-content" ng-controller="RegisterCon" >
   @*<form method="post" action="@Url.Action("Add")" >*@ 
        <div class="form-group">

            @Html.LabelFor(p => p.PersonName)
            @Html.EditorFor(p => p.PersonName, new { htmlAttributes = new { @class = "form-control", placeholder = "Full Name", ng_model = Html.DisplayNameFor(p=>p.PersonName)} })
            @Html.ValidationMessageFor(p => p.PersonName, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Email)
            @Html.EditorFor(p => p.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
            @Html.ValidationMessageFor(p => p.Email, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Birthdate)
            @Html.EditorFor(p => p.Birthdate, new { htmlAttributes = new { @class = "form-control", placeholder = "Date of Barth",type="text" } })
            @Html.ValidationMessageFor(p => p.Birthdate, null, new { @class = "text-danger" })
        </div>
        <div class="checkbox">
            @Html.LabelFor(p => p.IsMarid)
            @Html.EditorFor(p => p.IsMarid)
            @Html.ValidationMessageFor(p => p.IsMarid, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Username)
            @Html.EditorFor(p => p.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Username" } })
            @Html.ValidationMessageFor(p => p.Username, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Password)
            @Html.EditorFor(p => p.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
            @Html.ValidationMessageFor(p => p.Password, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="retypepassword">Retype Password</label>
            <input type="password" class="form-control" name="retypepassword" id="retypepassword" placeholder="Retype Password">
        </div>
        <button type="submit" class="btn btn-default" ng-click="AddUser()">Submit</button>
    @*</form>*@
</div>


